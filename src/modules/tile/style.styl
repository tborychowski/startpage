@import "_lib";

.tile
	u 0; transition transform .2s ease-out; not-selectable(); position relative;
	line-height 1; word-wrap break-word; cursor default; margin 3 1 0 3;
	color #fff; lgradient #4689F0 #4D90FD; // bg #2E8DEF;
	border 1px solid rgba(#fff, 0.2); shadow 1 1 1 #000 0.1;

	&:hover
		shadow 0 0 0 4 #fff 0.2;

	&.selected
		shadow 0 0 0 3 #333 1 inset; border #333;

		&:after
		&:before
			pos 0 0; display block; content '';

		&:after
			border-top 30px solid #333; border-left 30px solid transparent; z 101;

		&:before
			top 3; right 3; color #fff; content: '\f00c'; font 200 12px 'FontAwesome'; z 102;


	&.pressed
		transform scale(0.95);

	&.sortable-ghost
		opacity .5

div.tile
	cursor move;


// .container.layout-apps
.container:first-child
	.fa
		width 100%; display block;
	.tile
		padding 46 10 10; text-align center; font 22; font-weight 100; size 128;

		&.has-icon
			font 14;
			.fa
				margin -22 0 10; font 64;


// .container.layout-list
.container:not(:first-child)
	.fa
		padding-right 5px;
	.tile
		size auto 32; padding 8 10 0; margin 3 0 0 3; bg rgba(#000, .1)

	&.pressed
		transform scale(0.99);
