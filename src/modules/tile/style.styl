@import "_lib";

.tile
	u 0; transition transform .2s ease-out; not-selectable(); position relative;
	line-height 1; word-wrap break-word; cursor pointer; margin 7 0 0 7;
	color #fff; lgradient #4689F0 #4D90FD; // bg #2E8DEF;
	border 1px solid rgba(#fff, 0.2); shadow 0 1 2 #000 0.4; border-radius 0px
	background-repeat no-repeat;
	transition background-color 3s ease-out;

	&:hover
		shadow 0 0 0 4 #fff 0.2;

	&.selected
		shadow 0 0 0 3 #333 1 inset; border #333;

		&:after
		&:before
			pos 0 0; display block; content '';

		&:after
			border-top 30px solid #333; border-left 30px solid transparent; z 101;

		&:before
			top 3; right 3; color #fff; content: '\f00c'; font 200 12px 'FontAwesome'; z 102;


	&.pressed
		transform scale(0.95);

	&.sortable-ghost
		opacity .5

div.tile
	cursor move;


// .container.layout-apps
.container:first-child
	.fa
		width 100%; display block;
	.tile
		padding 46 10 10; text-align center; font 22; font-weight 100; size 128;
		background-position center; color transparent;

		&.has-icon
			font 14;
			.fa
				margin -22 0 10; font 64;


// .container.layout-list
.container:not(:first-child)
	.fa
		font 60; padding-right 16px; vertical-align middle;
	.tile
		size auto 64; padding 20 10 0 20; margin 7 10 0 20; font 20; font-weight 100; color #eee;
		white-space nowrap; overflow hidden; text-overflow ellipsis;
		background-color rgba(#fff, .2)
		background-size 64px;
		background-position 0 0;
		background-image none;

	&.pressed
		transform scale(0.99);
