@import "_lib";

.main
	pos 0 0 0 0; overflow hidden; overflow-y auto; padding 0; transition all .3s ease-out;

.wrapper
	width 100%; padding 0 2 60 0;
	display flex; flex-flow row wrap; align-items flex-start;


.container
	position relative; margin 0;
	display flex; flex 1 100%; align-self flex-start; flex-flow row wrap;

	// &.layout-list
	&:not(:first-child)
		flex-flow column; flex 1 30%; min-width 200px; max-width 50%; margin-top 10px;

	.group-name
		show 0;


.unlocked .container
	bg rgba(#000, 0.3); padding 5 10 10 5; margin 4 2 2 4;

	.group-name
		color #aaa; font 23; font-weight 100; padding 10 5; margin 0; show 2;
