@import "_lib";

html
	font-family sans-serif
	-ms-text-size-adjust: 100%;
	-webkit-text-size-adjust: 100%;
html
body
	size 100%; overflow hidden; position fixed; // <- chrome scroll bug

body
	margin 0; font 400 15px/1 'Open Sans', sans-serif; bg #666;

button
input
	font-family inherit; font-size 100%;
	&::-moz-focus-inner
		padding 0; border 0;
button
	cursor default;

*
	box-sizing border-box;

.main
	pos 0 0 0 0; overflow hidden; overflow-y auto; padding 60 60 0 40; transition all .3s ease-out;

.wrapper
	width 100%; padding 0 0 60;
	display flex; flex-flow row wrap; align-items flex-start;
